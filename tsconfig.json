{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    "rootDir": ".",
    "outDir": "dist",
    "noEmit": false,

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "*.ts",
    "config/**/*.json"
  ]
}
